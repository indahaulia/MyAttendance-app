<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".FormCuti"
    android:orientation="vertical">

    <ImageView
        android:layout_height="190dp"
        android:layout_width="match_parent"
        android:src="@drawable/img_cuti"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORM CUTI"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="@color/blue"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Mulai :"
        android:textSize="20dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/cuti_tgl_awal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="01-01-2022"
        android:inputType="datetime"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Selesai :"
        android:textSize="20dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/cuti_tgl_selesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="01-01-2022"
        android:inputType="datetime"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keterangan :"
        android:textSize="20dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/cuti_keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"/>

    <Button
        android:id="@+id/submitCuti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="22sp"
        android:textAlignment="center"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:text="Submit" />

    <Button
        android:id="@+id/lihatCuti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="22sp"
        android:textAlignment="center"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:text="LIHAT CUTI"/>

</LinearLayout>