<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DefaultActivity">

    <ImageView
        android:id="@+id/iv_default"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/img_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dtlprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Detail Profil"
        android:textAlignment="center"
        android:textColor="#0096dc"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_default" />

    <TableLayout
        android:id="@+id/tabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/dtlprofile">

        <TableRow
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:padding="10px">

            <TextView
                android:id="@+id/namavw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Nama Lengkap "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nmvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text=" : "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/namaview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Nama Lengkap "
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:padding="10px">

            <TextView
                android:id="@+id/ttlvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Tanggal Lahir"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text=" : "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ttl_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Tanggal Lahir"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:padding="10px">

            <TextView
                android:id="@+id/jabatanvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Jabatan"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/jvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text=" : "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/jabatanview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Jabatan"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:padding="10px">

            <TextView
                android:id="@+id/jenisvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Jenis Kelamin"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/jnvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text=" : "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/jenisview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Jenis Kelamin"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:padding="10px">

            <TextView
                android:id="@+id/emailvw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Email"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/evw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text=" : "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/emailview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Email"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>